%html
	%head
		%script{:type => "text/javascript",
		        :src  => "javascript/third-party/lavaCore.js"}
		%script{:type => "text/javascript",
		        :src  => "javascript/third-party/serenade.0.1.1.min.js"}
		%script{:type => "text/javascript",
		        :src  => "javascript/application.js"}
		%link{:rel => "stylesheet", :type => "text/css", :href => "css/style.css"}
		
		%script{:type => "text/x-serenade",
		        :id => "bracketMatch"}
			:plain
				.bracketNode[class=@active event:click=nodeClicked]
					.team.teamTop
						- in @teamTop
							- view "teamView"
						.score @teamTopScore
					.team.teamBottom
						- in  @teamBottom
							- view "teamView"
						.score @teamBottomScore
		
		%script{:type => "text/x-serenade",
		        :id => "roundView"}
			:plain
				.roundWrapper
					.roundTopTeam.roundTeam
						- in @teamTop
							.grandioseTeam @teamName
						.grandioseScore[event:click=topScoreClicked] @teamTopScore
					.buffer "VS"
					.roundBottomTeam.roundTeam
						.grandioseScore[event:click=bottomScoreClicked] @teamBottomScore
						- in @teamBottom
							.grandioseTeam @teamName
					.menu
						.menu-item[event:click=swapClicked] "Swap"
						.menu-item[event:click=resetClicked] "Reset"
						.menu-item[event:click=closeClicked] "Close"

	%body
		#tier-2.bracketTier
		#tier-1.bracketTier
		#tier-0.bracketTier
		#roundOverlay.overlay.visible-false
